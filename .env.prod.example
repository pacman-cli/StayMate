# ==============================================
# StayMate Production Environment Variables
# COPY THIS ENTIRE content into .env on your server
# ==============================================

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# Matches: spring.datasource.url, username, password
DB_HOST=db
DB_PORT=3306
DB_NAME=staymate_prod
DB_USERNAME=staymate_user
DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# ============================================================
# SECURITY & AUTH (JWT)
# ============================================================
# Generate with: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=PASTE_YOUR_BASE64_SECRET_HERE_NO_NEWLINES
JWT_EXPIRATION_MS=900000
JWT_REFRESH_EXPIRATION_MS=604800000

# ============================================================
# ADMIN CONFIGURATION
# ============================================================
ADMIN_EMAIL=admin@staymate.puspo.online
ADMIN_PASSWORD=CHANGE_ME_STRONG_ADMIN_PASSWORD
ADMIN_SECRET_KEY=CHANGE_ME_ADMIN_KEY

# ============================================================
# GOOGLE OAUTH2
# ============================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH2_REDIRECT_URI=https://staymate.puspo.online/oauth2/redirect

# ============================================================
# MINIO (Object Storage)
# ============================================================
# Internal URL for backend -> minio communication
MINIO_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=CHANGE_ME_MINIO_SECRET
MINIO_BUCKET_NAME=staymate-uploads
# Public URL for browser -> minio access (through nginx or direct)
MINIO_PUBLIC_URL=https://staymate.puspo.online/minio

# ============================================================
# SERVER & CORS
# ============================================================
# Your actual domain - used for CORS and frontend API calls
CORS_ALLOWED_ORIGINS=https://staymate.puspo.online
SERVER_PORT=8080
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================
# FRONTEND
# ============================================================
NEXT_PUBLIC_API_URL=https://staymate.puspo.online
BACKEND_URL=http://server:8080
