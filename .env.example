# StayMate Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=authdb
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here

# =============================================
# GOOGLE OAUTH2 CONFIGURATION (REQUIRED)
# =============================================
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================
# JWT CONFIGURATION (REQUIRED)
# =============================================
# Generate a secure 512-bit (64 byte) base64-encoded secret:
# openssl rand -base64 64
JWT_SECRET=your_jwt_secret_base64_encoded

# =============================================
# ADMIN CONFIGURATION (REQUIRED)
# =============================================
# Secret key for hidden admin endpoints
ADMIN_SECRET_KEY=your_admin_secret_key_here

# =============================================
# OAUTH2 REDIRECT CONFIGURATION
# =============================================
# Where to redirect after successful OAuth login
OAUTH2_REDIRECT_URI=http://localhost:3000/oauth2/redirect

# =============================================
# CORS CONFIGURATION (PRODUCTION)
# =============================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================
# FRONTEND CONFIGURATION
# =============================================
NEXT_PUBLIC_API_URL=http://localhost:8080
BACKEND_URL=http://localhost:8080

# =============================================
# RATE LIMITING CONFIGURATION
# =============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
